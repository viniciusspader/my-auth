.text-center#registration
  %h1{ :style => 'margin-bottom: 15px;' } Cadastre-se
  - if !devise_error_messages!.empty?
    .alert.alert-error.text-left
      %a.close{ 'data-dismiss' => 'alert' }
        %i.icon-remove
      = devise_error_messages!
  = form_for('user', :url => :user_registration) do |f|
    .control-group
      .controls
        = f.text_field :email, :placeholder => 'E-mail'
    .control-group
      .controls
        = f.password_field :password, :placeholder => 'Senha'
    .control-group
      .controls
        = f.password_field :password_confirmation,
                       :placeholder => 'Confirme a senha'
      .form-actions
        = f.submit 'Cadastrar', :class => 'btn btn-primary'
